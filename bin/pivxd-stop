#!/bin/bash

set -e

function isDaemonRunning() {
  [[ $(pgrep -x 'pivxd') ]]
}

wasRunning=''

echo 'attempting to stop pivxd'

if isDaemonRunning; then
  echo 'stopping pivxd'
  pivx-cli stop
  wasRunning='yes'
else
  echo 'pivxd is not running'
fi

while isDaemonRunning; do
  sleep 1
  echo 'waiting for pivxd to stop'
done

if [ $wasRunning ]; then
  echo 'pivxd stopped'
fi

echo 'blockchain data deleted'

exit 0
